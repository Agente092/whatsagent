{
  "name": "whatsapp-business-advisor",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "lint": "next lint",
    "server": "node server/index.js",
    "dev:server": "nodemon server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "logs:view": "powershell -Command \"Get-Content logs/combined.log -Wait\"",
    "logs:error": "powershell -Command \"Get-Content logs/error.log -Wait\"",
    "logs:show": "type logs\\combined.log",
    "logs:show-error": "type logs\\error.log",
    "health": "powershell -Command \"Invoke-RestMethod http://localhost:3001/health\"",
    "build:production": "npm run build && npm run db:deploy",
    "start:production": "NODE_ENV=production node server/index.js",
    "start:backend": "node server/index.js",
    "build:backend": "npx prisma generate && npx prisma db push && node scripts/init-database.js",
    "db:generate": "npx prisma generate",
    "db:deploy": "npx prisma db push",
    "db:init": "node scripts/init-database.js",
    "test:migration": "node test-postgresql-migration.js",
    "db:migrate": "npx prisma db push && npm run db:init",
    "whatsapp:clear": "node emergency-clear-whatsapp.js",
    "postinstall": "npx prisma generate"
  },
